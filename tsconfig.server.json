{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "resolveJsonModule": true,
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "./src/server", "server.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
